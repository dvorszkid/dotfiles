! black
*color0: #0c0c0c

! bright_black
*color8: #6f6f6f

! red
*color1: #c35e6d

! bright_red
*color9: #c35e6d

! green
*color2: #6dc35e

! bright_green
*color10: #6dc35e

! yellow
*color3: #c3b45e

! bright_yellow
*color11: #c3b45e

! blue
*color4: #3C4CA3

! bright_blue
*color12: #5e6dc3

! magenta
*color5: #b45ec3

! bright_magenta
*color13: #b45ec3

! cyan
