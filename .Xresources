! --- special colors ---

*background: #101010
*foreground: #d7d7d7

! --- standard colors ---

! black
*color0: #0c0c0c

! bright_black
*color8: #6f6f6f

! red
*color1: #c35e6d

! bright_red
*color9: #c35e6d

! green
*color2: #6dc35e

! bright_green
*color10: #6dc35e

! yellow
*color3: #c3b45e

! bright_yellow
*color11: #c3b45e

! blue
*color4: #3C4CA3

! bright_blue
*color12: #5e6dc3

! magenta
*color5: #b45ec3

! bright_magenta
*color13: #b45ec3

! cyan
*color6: #5ec3b4

! bright_cyan
*color14: #5ec3b4

! white
*color7: #d7d7d7

! bright_white
*color15: #ffffff

! ------------------------------------------------------------------------------
! --- Xft settings
!  
Xft.dpi:		96
Xft.antialias:	true
Xft.rgba:		none
Xft.autohint:	false
Xft.hinting:	true
Xft.hintstyle:	hintmedium

! ------------------------------------------------------------------------------
! --- XTerm

xterm.faceName:			DejaVu Sans Mono:style=Regular:size=8
xterm.utf8:				2
xterm.dynamicColors:	true
xterm.eightBitInput:	true
xterm.saveLines:		5000
xterm.scrollKey:		true
xterm.scrollTtyOutput:	false
xterm.scrollBar:		false
xterm.rightScrollBar:	true
xterm.jumpScroll:		true
xterm.multiScroll:		true
xterm.toolBar:			false

! ------------------------------------------------------------------------------
! --- URxvt
! ------------------------------------------------------------------------------

! size and look
! URxvt.termName:				screen-256color
URxvt.geometry:				120x35
URxvt.font:					xft:DejaVu Sans Mono:style=Regular:size=9:antialias=false,xft:DejaVu Sans Mono for Powerline:style=Bold:size=9:antialias=false

! scrollbar
URxvt.scrollBar:			true
URxvt.scrollBar_right:		true
URxvt.scrollBar_floating:	true
URxvt.scrollstyle:			plain
URxvt.thickness:			1
URxvt.scrollColor:			#333333
URxvt.highlightColor:		#222222

! behavior
URxvt.saveLines:			5000
URxvt.urgentOnBell:			true
URxvt.scrollWithBuffer:		false
URxvt.scrollTtyKeypress:	true
URxvt.jumpScroll:			true

! extensions
URxvt.perl-ext-common:		default,matcher
URxvt.url-launcher:			/usr/bin/xdg-open
URxvt.matcher.button:		1

