alias fuck='$(thefuck $(fc -ln -1))'
alias sudo="sudo "
alias justfucking="sudo "
alias tmd="tmux-session dropdown"


##
# Gentoo commands
##
alias esync='sudo eix-sync -H -C --ask -C n'
alias emerge='sudo emerge'
alias eupdate='sudo emerge -uDN --keep-going @world'
alias eupdate_time='sudo emerge -uDNp world | genlop -p'
alias edep='sudo emerge --depclean'
alias eremove='sudo CONFIG_PROTECT="-*" sudo emerge -C'
alias etc-update='sudo etc-update'
alias esets="echo '*** Available Sets ***'; emerge --list-sets; echo; echo '*** Installed Custom Sets ***'; eix --print-world-sets"


##
# Debian commands
##
# edep for packages (invoke multiple times)
alias adep='apt-get purge `deborphan`'
# edep for config files
alias adepconfig='dpkg --purge `dpkg -l | egrep "^rc" | cut -d" " -f3`'


##
# Local .alias
##
if [ -f "$HOME/.alias.local" ]
then
	source "$HOME/.alias.local"
fi

