#!/usr/bin/env sh

media_dir="${HOME}/.local/share/run-and-notify"

function notify() {
    name="$1"
    result="$2"

    if [[ $result == 0 ]]; then
        message="Command Successful"
        icon=good.svg
    else
        message="Command Failed (returned $result)"
        icon=bad.svg
    fi

    if [[ $(uname -s) == "Darwin" ]]; then
        notify-send "$message" "$name\n(in $(basename $PWD))"
    else
        notify-send \
            --expire-time=10000 \
            --icon="${media_dir}/${icon}" \
            "$message" "$name
<i>$PWD</i>"
    fi
}

"$@"
result=$?
notify "$*" "$result"
exit "$result"
