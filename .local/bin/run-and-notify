#!/usr/bin/env sh

media_dir="${HOME}/.local/share/run-and-notify"

function notify() {
    name="$1"
    result="$2"

    if [[ $result == 0 ]]; then
        message="✅ Success"
        icon=good.svg
    else
        message="❌ Returned: $result"
        icon=bad.svg
    fi

    if [[ $(uname -s) == "Darwin" ]]; then
        terminal-notifier \
            -title "\"$name\"" \
            -subtitle "\"(in $(basename $PWD))\"" \
            -group "\"$PWD\"" \
            -message "\"$message\"" \
            -appIcon "\"${media_dir}/${icon}\"" \
            -sender "org.alacritty" \
            -activate "org.alacritty"
    else
        notify-send \
            --expire-time=10000 \
            --icon="${media_dir}/${icon}" \
            "$message" "$name
<i>$PWD</i>"
    fi
}

"$@"
result=$?
notify "$*" "$result"
exit "$result"
